  <!-- Fixed Dark Mode Toggle (top-right corner) -->
 <button
  id="theme-toggle"
  class="p-2 fixed top-4 right-4 z-50 flex items-center justify-center"
  aria-label="Toggle Light/Dark Mode"
>
    <!-- Sun Icon (default hidden, shows in dark mode) -->
    <svg
  id="sun-icon"
  xmlns="http://www.w3.org/2000/svg"
  class="w-5 h-5 hidden"
  fill="currentColor"
  viewBox="-2 -2 24 24"
  preserveAspectRatio="xMinYMin"
>
